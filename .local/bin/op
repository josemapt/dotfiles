#!/bin/sh

# open pdf, jpg, png, odt... files with "op"

if [ -f $1 ] ; then
    case $1 in
        *.pdf)      zathura $1  ;;
        *.jpg)      feh -g 1600x900+150+100 --scale-down $1      ;;
        *.png)      feh -g 1600x900+150+100 --scale-down $1      ;;
	    *.mp4)      mpv $1 ;;
        *.odt)      libreoffice $1 2> /dev/null ;;
        *)           echo "'$1' cannot be opened via view" ;;
    esac
else
    echo -e "\033[0;31mWanrnig! \033[0;33m'$1' \033[0;31mis not a valid file\033[0m"
    false
fi